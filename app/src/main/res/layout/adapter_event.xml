<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_btn"
        android:layout_width="match_parent"
        android:layout_height="135dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/event"
            app:layout_constraintBottom_toBottomOf="@id/gd_bawah_horisontal1"
            app:layout_constraintEnd_toStartOf="@+id/kiri2"
            app:layout_constraintStart_toStartOf="@+id/kiri1"
            app:layout_constraintTop_toTopOf="@id/gd_atas_horisontal1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/gd_bawah_horisontal2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@id/gd_atas_horisontal2">

            <TextView
                android:id="@+id/txt_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Judul"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="4dp"
               android:weightSum="2"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="0.5">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="8dp"
                       android:textColor="@color/white"
                       android:textSize="11sp"
                       android:text="Tanggal"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="8dp"
                       android:textColor="@color/white"
                       android:textSize="11sp"
                       android:text="Waktu"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="8dp"
                       android:textSize="11sp"
                       android:textColor="@color/white"
                       android:text="Tempat"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="0.1">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="8dp"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textSize="11sp"
                       android:text=":"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="8dp"
                       android:textSize="11sp"
                       android:textColor="@color/white"
                       android:gravity="center"
                       android:text=":"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="8dp"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textSize="11sp"
                       android:text=":"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="1.4">

                   <TextView
                       android:id="@+id/txt_tgl"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="11sp"
                       android:paddingLeft="6dp"
                       android:textColor="@color/white"
                       android:text=""/>

                   <TextView
                       android:id="@+id/txt_waktu"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="11sp"
                       android:paddingLeft="6dp"
                       android:textColor="@color/white"
                       android:text=""/>

                   <TextView
                       android:id="@+id/txt_tempat"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="11sp"
                       android:paddingLeft="6dp"
                       android:textColor="@color/white"
                       android:text=""/>
               </LinearLayout>

           </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_bawah_horisontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_atas_horisontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.20"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_bawah_horisontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.90"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_atas_horisontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/kiri2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/kiri1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>